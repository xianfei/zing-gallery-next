<html lang="zh-cn">
<head>
	<meta charset="UTF-8">
	<title><%- title %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="<%= relPath %>/main.css">
</head>
<body>
	<header>
		<a href="<%= relPath %>/">
			<img src="<%= avatar %>" class="header-avater" />
		</a>
		<a href="<%= relPath %>/">
			<h1 class="header-title"><%= title %></h1>
			<% if(description!='') {%>
			<h2 class="des-title"><%- description %></h2>
			<% } %>		
		</a>
	</header>
  <div class="layout">
  	<%- galleryHtml %>
  </div>
  <footer class="footer">
  	<p><%- config.footer?(config.footer+', p'):'P' %>owered by <a href="https://github.com/xianfei/zing-gallery-next" target="_blank">zing-gallery-next</a></p>
	<br>
  </footer>
	<script src="<%= relPath %>/main.js"></script>
</body>
</html>
